// scripts/todo tree.txt
{
    "todo-tree.general.tags": [
        "BUG",
        "TODO",

        "[ ]",
        "[.]",
        "[x]",
        "[!]",
    ],
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug",
            "type": "line",
            "foreground": "white",
            "background": "red",
            "iconColour": "red",
        },
        "TODO": {
            "icon": "circle",
            "type": "line",
            "foreground": "white",
            "background": "#06cc2B",
            "iconColour": "#06cc2B",
        },
        "[ ]": {
            "icon": "circle",
            "type": "line",
            "foreground": "white",
            "background": "#06cc2B",
            "iconColour": "#06cc2B",
        },
        "[.]": {
            "icon": "issue-opened",
            "type": "line",
            "foreground": "white",
            "background": "green",
            "iconColour": "green",
        },
        "[x]": {
            "icon": "check-circle",
            "type": "line",
            "foreground": "white",
            "background": "blue",
            "iconColour": "blue",
        },
        "[X]": {
            "icon": "check-circle",
            "type": "line",
            "foreground": "white",
            "background": "blue",
            "iconColour": "blue",
        },        

        "[!]": {
            "icon": "blocked",
            "type": "line",
            "foreground": "white",
            "background": "purple",
            "iconColour": "purple",
        },

    },    
    "todo-tree.tree.showBadges": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "html.suggest.angular1": true,
    "html.suggest.ionic": true
}